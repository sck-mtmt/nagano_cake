<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-4">
      <h5><span>会員情報編集</span></h5>
    </div>
  </div>
<%= form_with model: @customer,url: public_customers_my_page_path,method: :patch do |f| %>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-1">
    氏名
    </div>
    <div class="col-1"></div>
    <div class="col-1">
    <%= f.text_field :last_name %>
    </div>
    <div class="col-1"></div>
    <div class="col-1">
    <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-1">
    カナ
    </div>
    <div class="col-1"></div>
    <div class="col-1">
    <%= f.text_field :last_name_kana %>
    </div>
    <div class="col-1"></div>
    <div class="col-1">
    <%= f.text_field :first_name_kana %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-1">
    郵便番号
    </div>
    <div class="col-1"></div>
    <div class="col-1">
    <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-1">
    住所
    </div>
    <div class="col-1"></div>
    <div class="col-1">
    <%= f.text_field :address %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-1">
    電話番号
    </div>
    <div class="col-1"></div>
    <div class="col-1">
    <%= f.text_field :telephone_namber %>
    </div>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
    メールアドレス
    </div>
    <!--<div class="col-1"></div>-->
    <div class="col-5">
    <%= f.text_field :email %>
    </div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-3">
      <div class="actions">
      <%= f.submit'編集内容を保存', class: "btn btn-success" %>
      </div>
<% end %>
    </div>
    <div class="col-1"></div>
    <div class="col-3">
      <div class="actions">
      <%= link_to "退会する", public_customers_unsubscribe_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>