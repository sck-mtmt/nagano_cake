<h1>会員情報編集</h1>
<%= form_with model: @customer,url: public_customers_my_page_path,method: :patch do |f| %>
  <table class="my_page">
    <tr>
    　<th>氏名</th>
      <td><%= f.text_field :last_name %>
          <%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>

      <td><%= f.text_field :last_name_kana %>
           <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :telephone_namber %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
</table>
<%= f.submit'編集内容を保存', class: "btn btn-success" %>
<% end %>

<%= link_to "退会する", public_customers_unsubscribe_path, class: "btn btn-danger" %>
