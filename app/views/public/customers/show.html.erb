<h1>マイページ</h1>
<p>登録情報</p>
<%= link_to "編集する", public_customers_my_page_edit_path, class: "btn btn-success" %>
<table class="my_page">
    <tr>
      <th>氏名</th>
      <td><%=@customer.last_name %><%=@customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%=@customer.last_name_kana %><%=@customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%=@customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%=@customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%=@customer.telephone_namber %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%=@customer.email %></td>
    </tr>
</table>

<p>配送先</p><%= link_to "一覧を見る", public_addresses_path, class: "btn btn-primary" %>
<p>注文履歴</p><%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary" %>