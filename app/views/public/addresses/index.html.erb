<div class="container">
  <div class="row">
    <div class="col-5">
      <h5><span>配送先登録/一覧</span></h5>
    </div>
  </div>
<%= form_with model: @address, url:'/public/addresses',method: :post do |f| %>
  <div class="row">
    <!--<div class="col-1"></div>-->
    <div class="col-3">
      <%= f.label :郵便番号（ハイフンなし） %>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row">
    <!--<div class="col-1"></div>-->
    <div class="col-3">
    <%= f.label :住所 %>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
    <%= f.text_field :addresses %>
    </div>
  </div>
  <div class="row">
    <!--<div class="col-1"></div>-->
    <div class="col-4">
    <%= f.label :宛名 %>
    </div>
    <!--<div class="col-1"></div>-->
    <div class="col-3">
      <%= f.text_field :name %>
    </div>
    <div class="col-1"></div>
    <div class="col-1">
      <div>
      <%= f.submit'新規登録', class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
  <div class="row">
  <!--<div class="col-1"></div>-->
  <div class="col-9">
<table class="table" border="1">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td width="100"><%= address.postal_code %></td>
      <td width="680"><%= address.addresses %></td>
      <td width="170"><%= address.name %></td>
      <td width="330">
          <%= link_to "編集する", edit_public_address_path(address.id), class: 'btn btn-success' %>
          <%= link_to "削除する", public_address_path(address.id), method: :delete, class: 'btn btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
  </div>
  <div class="col-3"></div>
</div>