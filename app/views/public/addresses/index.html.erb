<div class="container">
  <div class="row">
    <div class="col-5">
      <h5><span>配送先登録/一覧</span></h5>
    </div>
  </div>
<%= form_with model: @address, url:'/public/addresses',method: :post do |f| %>
  <div class="row">
    <!--<div class="col-1"></div>-->
    <div class="col-3">
      <%= f.label :郵便番号（ハイフンなし） %>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row">
    <!--<div class="col-1"></div>-->
    <div class="col-3">
    <%= f.label :住所 %>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
    <%= f.text_field :addresses %>
    </div>
  </div>
  <div class="row">
    <!--<div class="col-1"></div>-->
    <div class="col-4">
    <%= f.label :宛名 %>
    </div>
    <!--<div class="col-1"></div>-->
    <div class="col-3">
      <%= f.text_field :name %>
    </div>
    <div class="col-1"></div>
    <div class="col-1">
      <%= f.submit'新規登録', class: "btn btn-success" %>
    </div>
  </div>
<% end %>



<table class="table">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.addresses %></td>
      <td><%= address.name %></td>
      <td>
<%= link_to "編集する", edit_public_address_path(address.id), class: 'btn btn-success' %>
<%= link_to "削除する", public_address_path(address.id), method: :delete, class: 'btn btn-danger' %>

      </td>
    </tr>
    <% end %>
  </tbody>