<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2">
    <h5><span>配送先編集</span></h5>
    </div>
  </div>
<%= form_with model: @address,url: public_address_path(@address.id), method: :patch do |f| %>
  <div class="row">
    <div class="col-3">
    <label>郵便番号（ハイフンなし）</label>
    </div>
    <!--<div class="col-1"></div>-->
    <div class="col-2">
    <%= f.text_field :postal_code, autofocus: true, id:"inputTitle"%><br>
    </div>
  </div>
  <div class="row">
    <div class="col-1">
    <label>住所</label>
    </div>
    <div class="col-2"></div>
    <div class="col-1">
    <%= f.text_field :addresses, autofocus: true, id:"inputTitle"%><br>
    </div>
  </div>
  <div class="row">
    <div class="col-1">
    <label>宛名</label>
    </div>
    <div class="col-2"></div>
    <div class="col-1">
    <%= f.text_field :name, autofocus: true, id:"inputTitle"%><br>
    </div>
    <div class="col-5"></div>
    <div class="col-1">
    <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>