<div class="container">
  <div class="row">
    <div class="col-4">
    <%= image_tag @item.image, size: "300x200" %>
    </div>
    <div class="col-7">
    <table>
      <div class="item-id"></div>
    <tr>
    <td><h4><strong><%= @item.name %></strong></h4></td>
    </tr>
    <tr>
    <td><h5><%= @item.instroduction %></h5></td>
    </tr>
    <tr>
    <td><h5><strong>￥<%= @item.with_tax_price %></h5><h7>（税込）</h7></strong></td>
    </tr>
    </div>
    </table>
    <div class="form-group"></div>
    <div class="actions">
      <%= form_with model: @cart_item, url:public_cart_items_path, method: :post do |f| %>
      <%= f.select :amount, *[1..10] %>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.submit "カートに入れる", class: "btn btn-success" %>
      </div>
      <% end %>
      </div>
</div>