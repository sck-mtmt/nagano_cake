<div class="container">
    <div class="row">
      <div class="col-2">
        <h3>商品一覧</h3>
      </div>
    </div>
  <div class="row">
    <% @items.first(8).each do |item| %>
        <div class="col-3">
          <div class="item-all-customer">
            <%=image_tag item.image, size: "200x150" %><br>
            <%= link_to public_item_path(item.id) do %>
            <%= item.name %>
            <% end %><br>
            ￥<%= item.price %><br>
          </div>
        </div>
    <% end %>
  </div>

<%= paginate @items %>

</div>