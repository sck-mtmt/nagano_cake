<h1>注文履歴詳細</h1>
<p>注文情報</p>
<table>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      <th>配送先</th>
      <td>〒<%= @order.postal_code %>
            <%= @order.address %><br>
            <%= @order.name %></td>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
      <th>ステータス</th>
      <td><%= @order.status_i18n %></td>
    </tr>
</table>
<p>請求情報</p>
<table>
    <tr>
      <th>商品合計</th>
      <td><%= cart_item.item.with_tax_price * cart_item.amount %></td>
          <% total += cart_item.item.with_tax_price * cart_item.amount %>
          <% end %>
      <th>配送料</th>
      <td><%= @order.shipping_cost %></td>
      <th>ご請求額</th>
          <%= cart_item.item.with_tax_price * cart_item.amount %>
          <% total += cart_item.item.with_tax_price * cart_item.amount %>
          <% end %>
      <th><%= total %></th>
    </tr>
</table>
<p>注文内容</p>
<table class="table">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.item.with_tax_price * cart_item.amount %></td>
          <% total += cart_item.item.with_tax_price * cart_item.amount %>
          <% end %>
    </tr>
    <% end %>
  </tbody>
