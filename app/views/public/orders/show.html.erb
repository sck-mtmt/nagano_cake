<h5><span>注文履歴詳細</span></h5>
<p>注文情報</p>
<table>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>〒<%= @order.postal_code %>
            <%= @order.address %><br>
            <%= @order.name %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.status_i18n %></td>
    </tr>
</table>
<p>請求情報</p>
<table>
    <tr>
      <th>商品合計</th>
          <% total=0 %>
          <% @order_details.each do |order_detail| %>
          <% total += order_detail.price * order_detail.amount %>
          <% end %>
      <td><%=total %></td>
      </tr>
      <tr>
      <th>配送料</th>
      <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
      <th>ご請求額</th>
      <td><%= @order.total_paymont %></td>
    </tr>
</table>
<p>注文内容</p>
<table class="table">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.price * order_detail.amount %>
          <% total += order_detail.price * order_detail.amount %></td>
    </tr>
    <% end %>
  </tbody>
</table>
