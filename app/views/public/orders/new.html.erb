<div class="container">
  <div class="row">
    <div class="col-3">
      <h5><span>注文情報入力</span></h5>
   </div>
  </div>
      <%= form_with model: @order, url: public_orders_confirm_path, method: :post do |f| %>
      <h6><strong>支払方法</strong></h6>
   <div class="order-new">
         <%= f.radio_button :payment_method, :credit_card %>
         <%= f.label :payment_method, "クレジットカード" %><br>
         <%= f.radio_button :payment_method, :transfer %>
         <%= f.label :payment_method, "銀行振込" %>
   </div>
      <h6><strong>お届け先</strong></h6>
   <div class="order-new">
   <%= f.radio_button :select_address, "0" %>
   <%= f.label :select_address, "ご自身の住所" %><br>
   <%= current_customer.address_display_1 %><br>
   <%= current_customer.address_display_2 %><br>

   <%= f.radio_button :select_address, "1" %>
   <%= f.label :select_address, "登録済住所から選択", size: 60 %><br>
   <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>

   <%= f.radio_button :select_address, "2" %>
   <%= f.label :select_address, "新しいお届け先" %><br>
     <label>郵便番号（ハイフンなし）</label>
     <%= f.text_field :postal_code, autofocus: true, id:"inputTitle" %><br>
     <label>住所</label>
     <%= f.text_field :address, autofocus: true, id:"inputTitle", size: 60 %><br>
     <label>宛名</label>
     <%= f.text_field :name, autofocus: true, id:"inputTitle" %><br>
   </div>
  <div class="row">
     <div class="col-4"></div>
  <%= f.submit'確認画面へ進む', class: 'btn btn-primary' %>
<% end %>
</div>