<h1>注文履歴一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送日</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.create_at %></td>
      <td><%= order.update_at %></td>
      <td><%= order.name %></td>
      <td><%= order.total_paymont %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", public_order_path(order.id), class: 'btn btn-success' %></td>
    </tr>
    <% end %>
  </tbody>