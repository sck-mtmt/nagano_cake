<div class="container">
  <div class="row">
    <div class="col-1">
    <h5><span>注文履歴一覧</span></h5>
  </div>
        <table class="table" border="1" width="600" height="150">
          <thead>
            <tr>
            <th valign="middle" width="30" height="">注文日</th>
            <th width="250" height="">配送先</th>
            <th width="100" height="">注文商品</th>
            <th valign="middle" width="40" height="">支払金額</th>
            <th valign="middle" width="80" height="">ステータス</th>
            <th valign="middle" width="80" height="">注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>〒<%= order.postal_code %><br>
                <%= order.address %><br>
                <%= order.name %><br>
            </td>
            <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
            <% end %>
            </td>
            <td><%= order.total_paymont %>円</td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to "表示する", public_order_path(order.id), class: "btn btn-primary" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
</div>