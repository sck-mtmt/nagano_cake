<h4>注文情報確認</h4>
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
    </tr>
  </tbody>
<table class="table">
  <tr>
    <th>送料</th>
    <% total=0 %>
    <% @order.each do |order| %>
    <% total += cart_item.subtotal %>
    <% end %>
    <td><%= total %></td>
  </tr>
  <tr>
    <th>商品合計</th>
<% total=0 %>
    <% @order.each do |order| %>
    <% total += cart_item.subtotal %>
    <% end %>
    <td><%= total %></td>
  </tr>
    <tr>
    <th>請求金額</th>
    <% total=0 %>
    <% @order.each do |order| %>
    <% total = cart_item.subtotal　+ order.shipping_cost %>
    <% end %>
    <td><%= total %></td>
  </tr>
  </table>
<p>支払方法</p><%= @order.payment_method %>
<p>お届け先</p><%= @order.address %>

  <%= link_to '注文情報を確認する',public_orders_complete_path, class: "btn btn-success" %>