 <div class="container">
    <div class="row">
      <div class="col-1"></div>
      <h5><span>ログイン</span></h5>
    </div>
    <div class="row">
      <div class="col-1"></div>
      <h7><span>会員の方はこちらからログイン</span></h7>
    </div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
       <div class="col-2"></div>
       <div class="col-2">
       <%= f.label :メールアドレス%>
       </div>
       <!--<div class="col-1"></div>-->
       <div class="col-1">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 40 %>
       </div>
    </div>
    <div class="row">
       <div class="col-2"></div>
       <div class="col-2">
        <%= f.label :パスワード %>
       </div>
       <!--<div class="col-1"></div>-->
       <div class="col-1">
        <%= f.password_field :password, autocomplete: "current-password", size: 40 %>
       </div>
      </div>
    </div>
    <div class="row">
       <div class="col-5"></div>
       <div class="col-1">
       <div class="actions-1">
       <%= f.submit "ログイン", class: "btn btn-primary" %>
<% end %>
       </div>
       </div>
    </div>


    <div class="row">
      <div class="col-2"></div>
      <div class="col-5">
      <h7><span>会員登録がお済みでない方</span></h7>
      </div>
    </div>
    <div class="row">
      <div class="col-3"></div>
     <div class="col-5">
      <%= link_to "こちら ", new_customer_registration_path %>
      から新規登録を行ってください。
      </div>
    </div>


 </div>
</div>