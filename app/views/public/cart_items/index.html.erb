<h4>ショッピングカート</h4>
<p><%= link_to "カートを空にする", public_cart_items_destroy_all_path, method: :delete, class: 'btn btn-danger' %></p>
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete, class: 'btn btn-danger' %></td>
    </tr>
    <% end %>
  </tbody>

<table class="table">
  <tr>
    <th>合計金額</th>
    <% total=0 %>
    <% @cart_items.each do |cart_item| %>
    <% total += cart_item.subtotal %>
    <% end %>
    <td><%= total %></td>
  </tr>
  </table>
  <%= link_to "買い物を続ける", public_items_path, class: 'btn btn-primary' %>
   <%= link_to "情報入力に進む", new_public_order_path, class: 'btn btn-success' %>

