<h5><span>ジャンル管理画面</span></h5>
<p>ジャンル一覧・追加</p>

  <%= form_with model: @genre, url:'/admin/genres',method: :post do |f| %>
  <%= f.label :ジャンル名 %>
  <%= f.text_field :name %>
  <%= f.submit'新規登録', class: "btn btn-success" %>
  <% end %>

<table>
  <thead>
    <tr>
    <th>ジャンル</th>
    <th></th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
    <td><%= genre.name %></td>
    <td></td>
    <td><%= link_to "編集する",edit_admin_genre_path(genre.id) %></td>
    </tr>
    <% end %>
  </tbody>
 </table>