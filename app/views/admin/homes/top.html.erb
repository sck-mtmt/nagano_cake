<h5><span>注文履歴一覧</span></h5>

<table class="table">
  <thead>
    <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
    <td><%= link_to admin_order_path(order_detail) do %>
        <%= order_detail.created_at.strftime('%Y/%m/%d') %>
        <% end %></td>
    <td><%= order_detail.order.customer.last_name %>
        <%= order_detail.order.customer.first_name %></td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.order.status_i18n %></td>
    </tr>
    <% end %>
  </tbody>
 </table>