<h1>注文履歴一覧</h1>

<table>
  <thead>
    <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
    <td><%= link_to admin_orders_confirm_path do %>
        <%= order_detail.created_at.strftime('%Y/%m/%d') %>
        <% end %></td>
    <td><%= order_detail.order.name %></td>
    <td><%= order_detail.order.amount %></td>
    <td><%= order_detail.order.status %></td>
    </tr>
    <% end %>
  </tbody>
 </table>