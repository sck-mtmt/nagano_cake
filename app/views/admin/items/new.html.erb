<div class="container">
    <div class="row">
      <div class="col-2">
      <h5><span>商品新規登録</span></h5>
      </div>
    </div>
  <%= form_with model: @item, url:admin_items_path,method: :post do |f| %>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-1">
        <h7>商品画像</h7>
        </div>
        <div class="col-1"></div>
        <div class="col-1">
        <%= f.file_field :image,accept:"image/*" %>
      <%#=label :image, "ファイルを選択", class: "image_input_btn" %>
      <%#= f.file_field :image,accept:"image/*", class: "image_form" %>
      <%#=label :image_file, "ファイルを選択", class: "btn btn-outline-dark" %>
      <%#= f.label :image,"ファイルを選択", class: "btn btn-outline-dark" do %>
      <%#= f.file_field :image, style:"display:none;" %>
      <%# end %>
        </div>
      </div>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-1">
        <h7>商品名</h7>
        </div>
        <div class="col-1"></div>
        <div class="col-1">
        <%= f.text_field :name %>
        </div>
      </div>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-1">
        <h7>商品説明</h7>
        </div>
        <div class="col-1"></div>
        <div class="col-1">
        <%=f.text_area :instroduction %>
        </div>
      </div>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-1">
        <h7>ジャンル</h7>
        </div>
        <div class="col-1"></div>
        <div class="col-1">
        <%= f.select:genre_id,Genre.all.map{ |genre| [genre.name, genre.id] } %>
        </div>
      </div>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-1">
        <h7>税抜価格</h7>
        </div>
        <div class="col-1"></div>
        <div class="col-2">
        <%= f.text_field :price %>円
        </div>
      </div>
      <div class="row">
        <div class="col-2"></div>
        <div class="col-2">
        <h7>販売ステータス</h7>
        </div>

        <div class="col-3">
        <%= f.radio_button :is_active,true %>販売中
        <%= f.radio_button :is_active, false %>販売停止中
        </div>
      </div>
      <div class="row">
        <div class="col-5"></div>
        <div class="col-4">
        <div class="actions">
        <%= f.submit'新規登録', class: "btn btn-success" %>
        </div>
        </div>
      </div>
  <% end %>
</div>


