<h5><span>商品新規登録</span></h5>
<%= form_with model: @item, url:admin_items_path,method: :post do |f| %>
<table>
  <tr>
    <th>商品画像</th>
    <td><%= f.file_field :image,accent:"image/*" %></td>
  </tr>
  <tr>
    <th>商品名</th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%=f.text_area :instroduction %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= f.select:genre_id,Genre.all.map{ |genre| [genre.name, genre.id] } %></td>
  </tr>
  <tr>
    <th>税抜価格</th>
    <td><%= f.text_field :price %>円</td>
  </tr>
  <tr>
    <th>販売ステータス</th>
        <td><%= f.radio_button :is_active,true %>販売中
        <%= f.radio_button :is_active, false %>販売停止中</td>
  </tr>
</table>
   <%= f.submit'新規登録', class: "btn btn-success" %>
<% end %>


