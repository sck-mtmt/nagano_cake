<h2>商品詳細</h2>
<%= image_tag @item.image, size: "300x200" %>
  <table class="table">
  <tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= @item.instroduction %></td>
  </tr>
  <tr>
    <th>ジャンル</th>
    <td><%= @item.genre.name %></td>
  </tr>
  <tr>
    <th>税込価格（税抜価格）</th>
    <td><%= @item.price %></td>
  </tr>
  <tr>
    <th>販売ステータス</th>
    <td><% if @item.is_active %>
          販売中
        <% else %>
          販売停止中
        <% end %></td>
  </tr>
  </table>
<%= link_to "編集する",edit_admin_item_path(@item.id), class: 'btn btn-success' %>
