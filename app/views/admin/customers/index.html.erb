<h4>会員一覧</h4>
<table class="table">
  <thead>
    <% @customers.each do |customer| %>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%=customer.id %></td>
      <td><%= link_to admin_customer_path(customer.id) do %>
          <%=customer.last_name %><%=customer.first_name %>
          <% end %></td>
      <td><%=customer.email %></td>
      <td>
        <% if customer.is_deleted %>
        有効
        <% else %>
        退会
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
<%= paginate @customers %>