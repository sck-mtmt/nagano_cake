<h4><%#=@customer.last_name %><%#=@customer.first_name %>の会員詳細</h4>
<table>
    <tr>
      <th>氏名</th>
      <td><%=@customer.last_name %><%=@customer.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%=@customer.last_name_kana %><%=@customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%=@customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%=@customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%=@customer.telephone_namber %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%=@customer.email %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><% if @customer.is_deleted %>
        有効
        <% else %>
        退会
        <% end %>
      </td>
    </tr>
</table>