<div class="container">
  <div class="row">
    <div class="col-lg-10">
    <h5><span><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span></h5>
    </div>
  </div>
  <div class="row">

    <div class="col-2">
    <h7>会員ID</h7>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
    <%= @customer.id %>
    </div>
  </div>
  <div class="row">

    <div class="col-2">
    <h7>氏名</h7>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
    <%= @customer.last_name %><%= @customer.first_name %>
    </div>
  </div>
  <div class="row">

    <div class="col-2">
      <h7>カナ</h7>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
      <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
    </div>
  </div>
  <div class="row">

    <div class="col-2">
      <h7>郵便番号</h7>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
      <%= @customer.postal_code %>
    </div>
  </div>
  <div class="row">

    <div class="col-2">
    <h7>住所</h7>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
    <%= @customer.address %>
    </div>
  </div>
  <div class="row">

    <div class="col-2">
      <h7>電話番号</h7>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
      <%= @customer.telephone_namber %>
    </div>
  </div>
  <div class="row">

    <div class="col-2">
    <h7>メールアドレス</h7>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
    <%= @customer.email %>
    </div>
  </div>
  <div class="row">

    <div class="col-2">
      <h7>会員ステータス</h7>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
      <% if @customer.is_deleted %>
        退会
      <% else %>
        有効
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-3"></div>
    <div class="col-9">
    <%= link_to "編集する",edit_admin_customer_path(@customer.id), class: 'btn btn-success' %>
    <%= link_to "注文履歴一覧を見る", admin_root_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>